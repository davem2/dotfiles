#!/bin/bash

# Repair video files created under avidemux (or any other software that produces incorrect output)

for f in $(find . ! -type d)
do 
	filename="${f##*/}"
	echo "ffmpeg -i "$f" -vcodec copy -acodec copy fixed_"$filename""
	
	ffmpeg -i "$f" -vcodec copy -acodec copy ./fixed/"$filename"
done 



