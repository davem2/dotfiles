conky.config = {
	use_xft = true,
	font = '123:size=8',
	xftalpha = 0.1,
    own_window = no,
    own_window_type = 'desktop',
    own_window_class = 'Conky',
    own_window_transparent = yes,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 280, minimum_height = 5,
	maximum_width = 1000,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	default_color = '#EAEAEA',
	default_shade_color = '#555555',
	default_outline_color = 'green',
	alignment = 'top_right',
	gap_x = 130,
	gap_y = 130,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	net_avg_samples = 1,
	override_utf8_locale = true,
	use_spacer = 'none',
	short_units = true,
    background = true,

};

conky.text = [[
#FFA300
#${color orange}${font Droid Sans:pixelsize=32}${time %a}${color EAEAEA}${font Droid Sans:pixelsize=80}${voffset -43}${time %d}${font Droid Sans:pixelsize=32}
#${color 888888}${font Droid Sans Mono:pixelsize=22}${hr 1}
#${color EAEAEA}${font Droid Sans Mono:pixelsize=24}${font Droid Sans Mono:pixelsize=24}${exec cal}
#${color 888888}${font Droid Sans Mono:pixelsize=22}${hr 1}
${color orange}${font Droid Sans Mono:pixelsize=11}${alignc}CPU $color${cpu}%   ${color orange}RAM $color$mem   ${color orange}DOWN $color${downspeed enp6s0}   ${color orange}UP $color${upspeed enp6s0}
${color EAEAEA}${font Droid Sans Mono:pixelsize=70}${voffset -35}${hr 1}
${color EAEAEA}${font Droid Sans:pixelsize=130}${alignc}${time %H}${voffset -10}:${voffset 10}${time %M}${font Droid Sans:pixelsize=32}
${voffset 20}${color EAEAEA}${font Droid Sans Mono:size=13}${execpi 60 DJS=$(date +%-d); cal | sed s/"\b$DJS\b"/'${color orange}'"$DJS"'$color'/ | sed s/^/'${alignc}'/ }
${color EAEAEA}${font Droid Sans Mono:pixelsize=42}${hr 1}${font Simplicity:pixelsize=30}
